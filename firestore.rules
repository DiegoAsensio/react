rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Productos: solo lectura pública, escritura solo desde consola
    match /items/{item} {
      allow read: if true;
      allow write: if false;
    }
    
    // Órdenes: permitir creación pero no lectura
    match /orders/{order} {
      allow read: if false;
      allow create: if true;
      allow update, delete: if false;
    }
  }
}